  context = 1
  tool = neovimdiff

[difftool]
  prompt = false
  trustExitCode = true

[difftool "neovimdiff"]
  cmd = nvim -d $REMOTE $LOCAL

[merge]
  tool = neovimmerge

[mergetool "neovimmerge"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[interactive]
  singlekey = true

[format]
