#!/usr/bin/env sh

. "${CJ_DOTFILES}/assets/colors.sh"
. "${CJ_DOTFILES}/settings.sh"

exec i3lock \
  --image "${CJ_WALLPAPER}" \
  --no-unlock-indicator \
  --force-clock \
  --screen=1 \
  \
  --timecolor="${CJ_COLOR_BG_HEX}CC" \
  --datecolor="${CJ_COLOR_BG_HEX}CC" \
  \
  --timesize=90 \
  --datesize=30 \
  --datepos="tx:ty + 50" \
  \
  --timestr="%H:%M" \
  --datestr="%e, %A"
