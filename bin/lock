#!/usr/bin/env sh

. "${CJ_DOTFILES}/assets/colors.sh"
. "${CJ_DOTFILES}/settings.sh"

exec i3lock \
  --image "${CJ_WALLPAPER}" \
  --no-unlock-indicator \
  --force-clock \
  --screen=1 \
  \
  --timecolor="${CJ_COLOR_4_HEX}AA" \
  --datecolor="${CJ_COLOR_4_HEX}AA" \
  \
  --timesize="$((${CJ_MONOFONT_SIZE} * 15 / 2))" \
  --datesize="$((${CJ_MONOFONT_SIZE} * 5 / 2))" \
  --datepos="tx:ty + $((${CJ_MONOFONT_SIZE} * 25 / 6))" \
  \
  --timestr="%H:%M" \
  --datestr="%e, %A" \
  "$@"
