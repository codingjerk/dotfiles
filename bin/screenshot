#!/usr/bin/env sh

maim_opts='
  --format=png
  --quality=1
  --hidecursor
  --nodecorations=1
  --padding=2
  --bordersize=2
  --select
'

convert_opts='
  -
  ( +clone -background black -shadow 100x8+0+0 )
  +swap
  -background none
  -layers merge
  +repage
  -quality 1
  -
'

xclip_opts='
  -selection clipboard
  -t image/png
'

exec maim $maim_opts | convert $convert_opts | xclip $xclip_opts
